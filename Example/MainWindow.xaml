                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="0,10,0,0" />
                    </Style>
                </StackPanel.Resources>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Text="Название фильма" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Text="Жанр" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Text="Год выпуска" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Text="Режиссер" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Text="Рейтинг" />
                <Button
                    Width="220"
                    Height="21.28"
                    HorizontalAlignment="Center"
                    Command="{Binding AddCommand}"
                    Content="Добавить" />
                <Button
                    Width="220"
                    Height="21.28"
                    HorizontalAlignment="Center"
                    Command="{Binding ShowallCommand}"
                    Content="Показать все" />



