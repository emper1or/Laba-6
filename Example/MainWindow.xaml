                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding Start}"
                        Header="Год" />
                    <GridViewColumn
                        Width="140"
                        DisplayMemberBinding="{Binding Raiting}"
                        Header="Рейтинг" />
                </GridView>
            </ListView.View>
        </ListView>


